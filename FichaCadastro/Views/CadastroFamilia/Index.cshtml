@using Newtonsoft.Json
@{
    ViewData["Title"] = "Cadastro de Família";
}
<link rel="stylesheet" href="~/css/pages.css" />
<link rel="stylesheet" href="~/css/components.css" />


<div class="form">
    <div class="fomr-head">
    </div>
    <div class="form-body">
    </div>
    <div class="title">Ficha de Cadastro de Família</div>
    <div class="subtitle">* campos com preenchimento obrigatório</div>



    <div id="tabstrip">
        <ul>
            <li class="k-state-active">
                Dados do Responsável
            </li>
            <li>
                Endereço
            </li>
            <li>
                Informações da Famália
            </li>

        </ul>
        <div>
            <div class="input-container ic1">
                <input id="nome" name="Responsavel.Nome" class="input" type="text" placeholder=" " />
                <div class="cut"></div>
                <label for="nome" class="placeholder">Nome Completo</label>
            </div>
            <div class="input-container ic2">
                <input id="rg" name="Rg" class="input" type="text" placeholder=" " />
                <div class="cut"></div>
                <label for="rg" class="placeholder">RG</label>
            </div>
            <div class="input-container ic2">
                <input id="cpf" name="Cpf" class="input" type="text" placeholder=" " />
                <div class="cut cut-short"></div>
                <label for="cpf" class="placeholder">CPF</label>
            </div>
            <div class="input-container ic2">
                <input id="datepicker" name="DataNascimento" class="input" title="datepicker" style="width: 100%" placeholder=" " />
                <div class="cut cut-short"></div>
                <label for="datepicker" class="placeholder">Data de Nascimento *</label>
            </div>
            <div class="input-container ic2">
                <input id="phone_number" name="Celular" class="input" type="text" placeholder=" " />
                <div class="cut cut-short"></div>
                <label for="phone_number" class="placeholder">Celular</label>
            </div>
            <div class="input-container ic2">
                <input id="tel_number" name="Telefone" class="input" type="text" placeholder=" " />
                <div class="cut cut-short"></div>
                <label for="tel_number" class="placeholder">Telefone</label>
            </div>
            <div class="input-container ic2">
                @*<input id="sexo" name="Sexo" class="input" type="text" placeholder=" " />*@

                <ul class="fieldlist input">
                    <li>
                        <input type="radio" name="engine" id="f" />
                    </li>
                    <li>
                        <input type="radio" name="engine" id="m" />
                    </li>
                    <li>
                        <input type="radio" name="engine" id="engine4" />
                    </li>
                    <li>
                        <input type="radio" name="engine" id="engine5" />
                    </li>
                    <li>
                </ul>
                <div class="cut cut-short">
                </div>
                <label for="sexo" class="placeholder">Sexo</label>
            </div>
            <div class="input-container ic2">
                <input id="sacramentos" class="input" type="text" placeholder=" " />
                <div class="cut cut-short"></div>
                <label for="sacramentos" class="placeholder">Sacramentos</label>
            </div>
            <div class="input-container ic2">
                <input id="profissao" class="input" type="text" placeholder=" " />
                <div class="cut cut-short"></div>
                <label for="profissao" class="placeholder">Profissão</label>
            </div>
            <div class="input-container ic2">
                <input id="estado-civil" class="input" type="text" placeholder=" " />
                <div class="cut cut-short"></div>
                <label for="estado-civil" class="placeholder">Estado Civil</label>
            </div>
            @*<div class="input-container ic2">
                <input id="email" class="input" type="text" placeholder=" " />
                <div class="cut cut-short"></div>
                <label for="email" class="placeholder">Nome do Conjuge</label>
                </div>*@
            <div class="input-container ic2">
                <input id="situacao-emprego" class="input" type="text" placeholder=" " />
                <div class="cut cut-short"></div>
                <label for="situacao-emprego" class="placeholder">Situaçao Emprego</label>
            </div>
        </div>
        <div>
            <div class="input-container ic1">
                <input id="endereco" class="input" type="text" placeholder=" " />
                <div class="cut cut-short"></div>
                <label for="endereco" class="placeholder">Endereço</label>
            </div>
            <div class="input-container ic2">
                <input id="numero" class="input" type="text" placeholder=" " />
                <div class="cut cut-short"></div>
                <label for="numero" class="placeholder">Número</label>
            </div>
            <div class="input-container ic2">
                <input id="email" class="input" type="text" placeholder=" " />
                <div class="cut cut-short"></div>
                <label for="email" class="placeholder">CEP</label>
            </div>
            <div class="input-container ic2">
                <input id="bairro" class="input" type="text" placeholder=" " />
                <div class="cut cut-short"></div>
                <label for="bairro" class="placeholder">Bairro</label>
            </div>
            <div class="input-container ic2">
                <input id="cidade" class="input" type="text" placeholder=" " />
                <div class="cut cut-short"></div>
                <label for="cidade" class="placeholder">Cidade</label>
            </div>
            <div class="input-container ic2">
                <input id="complemento" class="input" type="text" placeholder=" " />
                <div class="cut cut-short"></div>
                <label for="complemento" class="placeholder">Complemento</label>
            </div>
        </div>
        <div>
            <div class="input-container ic1">
                <input id="renda-familia" class="input" type="text" placeholder=" " />
                <div class="cut cut-short"></div>
                <label for="renda-familia" class="placeholder">Renda Familiar</label>
            </div>
            <div class="input-container ic2">
                <input id="quantidade-moradores" class="input" type="text" placeholder=" " />
                <div class="cut cut-short"></div>
                <label for="quantidade-moradores" class="placeholder">Quantidade de moradores na casa</label>
            </div>
            <div class="input-container ic2">
                <input id="quantidade-crianca" class="input" type="text" placeholder=" " />
                <div class="cut cut-short"></div>
                <label for="quantidade-crianca" class="placeholder">Quantidade de Crianças</label>
            </div>
            <div class="input-container ic2">
                <input id="recebe-cesta-basica" class="input" type="text" placeholder=" " />
                <div class="cut cut-short"></div>
                <label for="recebe-cesta-basica" class="placeholder">Recebe cesta básica?</label>
            </div>
            <div class="input-container ic2">
                <input id="historia-vida" class="input" type="text" placeholder=" " />
                <div class="cut cut-short"></div>
                <label for="historia-vida" class="placeholder">História de Vida</label>
            </div>
        </div>
    </div>
    <button type="text" class="submit">submit</button>

